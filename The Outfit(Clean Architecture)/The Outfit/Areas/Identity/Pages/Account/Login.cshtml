@page
@model LoginModel

@{
    Layout = "_IdentityLayout";
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css"
          integrity="sha512-OQDNdI5rpnZ0BRhhJc+btbbtnxaj+LdQFeh0V9/igiEPDiWE2fG+ZsXl0JEH+bjXKPJ3zcXqNyP4/F/NegVdZg=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>The Outfit</title>
</head>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
</style>

<body>
    <section class="vh-100" style="">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block p-5 " style="">
                                <div id="carouselExampleInterval" class="carousel slide " data-bs-ride="carousel">
                                    <div style="justify-content: center;" class="carousel-inner  ms-5">
                                        <div class="carousel-item active" data-bs-interval="1000">
                                            <img class="img-fluid rounded-4" src="~/images/login1.webp" class="d-block " height="auto" alt="...">
                                        </div>
                                        <div class="carousel-item" data-bs-interval="1000">
                                            <img class="img-fluid rounded-4" src="~/images/login2.webp" class="d-block " height="auto" alt="...">
                                        </div>
                                        <div class="carousel-item" data-bs-interval="1000">
                                            <img class="img-fluid rounded-4" src="~/images/login3.webp" class="d-block " height="auto" alt="...">
                                        </div>
                                        <div class="carousel-item" data-bs-interval="1000">
                                            <img class="img-fluid rounded-4" src="~/images/login4.webp" class="d-block " height="auto" alt="...">
                                        </div>
                                        <div class="carousel-item" data-bs-interval="1000">
                                            <img class="img-fluid rounded-4" src="~/images/login5.webp" height="auto" class="d-block " alt="...">
                                        </div>
                                        <div class="carousel-item" data-bs-interval="1000">
                                            <img class="img-fluid rounded-4 " src="~/images/login6.webp" height="auto" class="d-block " alt="...">
                                        </div>
                                        <div class="carousel-item" data-bs-interval="1000">
                                            <img class="img-fluid rounded-4 " src="~/images/login7.webp" height="auto" class="d-block " alt="...">
                                        </div>
                                        <div class="carousel-item" data-bs-interval="1000">
                                            <img class="img-fluid rounded-4 " src="~/images/login8.webp" height="auto" class="d-block " alt="...">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <div class="d-flex justify-content-center mt-0 pt-0   mb-5">
                                        <span class="h1 fw-bold mb-0"><img src="~/images/logo.png" height="70px" alt=""></span>
                                    </div>
            <form id="account" method="post">
                <h2>Enter your Account Credentials</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <br />
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        don't have account?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register now</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
