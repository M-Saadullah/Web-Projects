@page
@model LogoutModel
@{
    Layout = "_IdentityLayout";
    ViewData["Title"] = "Log out";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Thanks for visiting our website</h2>
                </div>
                <div class="card-body text-center">
                    @{
                        if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <form class="form-inline d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="btn btn-danger">Click here to Logout</button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-success" role="alert">
                                You have successfully logged out of the application.
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

