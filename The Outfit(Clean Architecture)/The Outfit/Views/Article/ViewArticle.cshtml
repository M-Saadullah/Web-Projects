@model List<The_Outfit.Models.Article>
@{
    Layout = "~/views/shared/_SuffiLayout.cshtml";
}

<div class="text-center my-5">
    <img src="~/images/logo.png" alt="logo" width="100px">
</div>
<h3 class="mt-2">Available Articles</h3>

<style>
    .table {
        border-collapse: collapse;
        width: 100%;
    }

        .table th, .table td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
</style>
<table class="table table-striped table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.id</td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.Quantity</td>
                <td>@p.Category</td>
                <td class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@p.id">Details</a>
                    <a class="btn btn-warning ms-3" asp-action="EditArticle" asp-route-id="@p.id">Edit</a>
                    <a class="btn btn-danger ms-3" asp-action="RemoveArticle" asp-route-id="@p.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Article/AddArticle" class="btn btn-primary">
    ADD Product<a />

    <div class="text-center mt-5 text-muted">
        Copyright &copy; 2024 &mdash; The Outfit
    </div>
